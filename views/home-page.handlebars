
{{#if loggedIn}}
<div class="row" id="viewBlogs">
    <div class="col-md-6">
        <ul>
            {{#each blogs as blog}}
            <li>
                <a href="/blogs/{{blog.id}}">{{blog.title}}</a>
                <ul>
                    {{#each blog.comments as comment}}
                    <li><a href="/Comments/{{comment.id}}">{{comment.comment}}</a></li>
                    {{/each}}
                </ul>
            </li>
            {{/each}}
        </ul>
    </div>

    <div class="row" id="userBlogs">
        <div class="col-md-6">
            <h3 class="text-center text-weight-bold">My Blogs</h3>
        </div>
        <ul>
            Blog{{#each userBlogs}}
            <li>{{this.title}}</li>
            {{/each}}
        </ul>
        <div class="input-group-mb-3">
            <input type="text" id="title-post" class="form-control" placeholder="title of new blog">
            <input type="text" class="form-control" aria-describedby="sizing-lg" id="text-post">
            <button class="bi bi-file-word-fill" id="post-blog-btn" data-value="{{userId}}">Post Blog</button>
        </div>

        <button id="logout" class="bi bi-door-open-fill">Logout</button>
    </div>
    {{else}}
    <a href="/signin">Sign In</a>
    {{/if}}
    <script src="../public/index.js"></script>